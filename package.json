{
  "name": "thunderbirdconversations",
  "version": "0.0.1",
  "description": "Thunderbird Conversations",
  "repository": {
    "type": "git",
    "url": "git@github.com:thunderbird-conversations/thunderbird-conversations.git"
  },
  "bugs": {
    "url": "https://github.com/thunderbird-conversations/thunderbird-conversations/issues"
  },
  "engines": {
    "thunderbird": ">=78.0a1"
  },
  "jest": {
    "transform": {
      "\\.[jt]sx?$": "babel-jest"
    },
    "moduleFileExtensions": [
      "js",
      "jsx"
    ],
    "setupFiles": [
      "./addon/tests/setup.js"
    ],
    "testEnvironment": "jsdom"
  },
  "private": true,
  "type": "module",
  "dependencies": {
    "@reduxjs/toolkit": "1.8.0",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-redux": "7.2.6",
    "redux": "4.1.2"
  },
  "devDependencies": {
    "@babel/cli": "7.17.6",
    "@babel/core": "7.17.8",
    "@babel/preset-env": "7.16.11",
    "@babel/preset-react": "7.16.7",
    "@wojtekmaj/enzyme-adapter-react-17": "0.6.7",
    "babel-jest": "27.5.1",
    "babel-loader": "8.2.4",
    "enzyme": "3.11.0",
    "eslint": "8.12.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-fetch-options": "0.0.5",
    "eslint-plugin-html": "6.2.0",
    "eslint-plugin-jsdoc": "38.0.8",
    "eslint-plugin-json": "3.1.0",
    "eslint-plugin-mozilla": "2.11.3",
    "eslint-plugin-no-unsanitized": "4.0.1",
    "eslint-plugin-prettier": "4.0.0",
    "eslint-plugin-react": "7.29.4",
    "html-webpack-plugin": "5.5.0",
    "jest": "27.5.1",
    "npm-run-all": "4.1.5",
    "npm-watch": "0.11.0",
    "prettier": "2.6.1",
    "prop-types": "15.8.1",
    "react-test-renderer": "17.0.2",
    "serve": "13.0.2",
    "web-ext": "6.8.0",
    "webpack": "5.70.0",
    "webpack-cli": "4.9.2"
  },
  "overrides": {
    "@devicefarmer/adbkit": {
      "node-forge": "1.3.0"
    }
  },
  "scripts": {
    "dev": "rm -rf ./dist-dev-html && (scripts/build-dev-html.sh --watch &) && sleep 4 && scripts/dev-html-serve.sh",
    "build": "./scripts/build.sh",
    "start": "web-ext run",
    "prod": "./scripts/build.sh --prod",
    "test": "npm-run-all test:*",
    "test:lint": "eslint --ext cjs,mjs,js,jsx,json .",
    "test:jest": "jest ./addon/tests/",
    "webextlint": "web-ext lint",
    "preversion": "npm ci && npm test",
    "version": "scripts/update-version.sh",
    "postversion": "npm run prod"
  },
  "webExt": {
    "sourceDir": "dist/"
  },
  "license": "MPL-2.0"
}
